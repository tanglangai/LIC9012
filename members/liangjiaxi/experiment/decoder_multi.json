{
    //////////////////////////////////////////////////////////
//    "train_data_path":      "/home/liangjx/K40extract_info/data/origin_data/train_data.json",
//    "validation_data_path": "/home/liangjx/K40extract_info/data/origin_data/dev_data.json",
